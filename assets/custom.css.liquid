/* Page transition animation */
@view-transition {
    navigation: auto;
}
@keyframes fade-out {
    from { opacity: 1; }
    to { opacity: 0; }
}
@keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
}
::view-transition-old(root) {
    animation: 0.15s ease-in both fade-out;
}
::view-transition-new(root) {
   animation: 0.15s ease-in both fade-in;
}
/* Page transition animation ENDS */
