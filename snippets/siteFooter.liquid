<div class="bg-{{ settings.footer_colors }} text-{{ settings.footer_colors }}-content">
  <footer class="footer-main max-w-8xl mx-auto px-4 py-6 grid gap-6 md:gap-10 md:grid-cols-5 grid-cols-1 md:grid-areas-desktop grid-areas-mobile" role="contentinfo">
    <aside class="footer-brand flex flex-col gap-4">
      {% if settings.footer_image %}
        <img src="{{ settings.footer_image_src | asset_img_url:'600','0' }}"
          alt="{{ settings.footer_image_alt | t:'default' }}"
          class="w-full max-w-[460px] md:w-60 lg:w-94">
      {% endif %}
      {% unless settings.footer_about_shop == empty %}
        <p class="font-bold">
          {{ settings.footer_about_shop | t:'default' }}
        </p>
      {% endunless %}
      {% if settings.footerButtonEnabled %}
        <a href="{{ settings.footerButtonURL }}" class="footer-cta">
          {{ settings.footerButtonText | t:'default' }}
        </a>
      {% endif %}
    </aside>
    {% if settings.footer_quicklinks_enable %}
      <section class="contents" aria-label="Footer navigation">
        {% for linkList in settings.footer_linklists %}
          <nav class="footer-links footer-col-{{ forloop.index }}" 
               aria-label="{{ linkList.footer_linklist_title }}">
            <div class="block md:hidden">
              <div class="collapse mb -0">
                <input type="checkbox" class="peer" />
                <h2 class="collapse-title flex justify-between items-center text-sm font-semibold uppercase tracking-wider text-gray-400 pr-0">
                  {{ linkList.footer_linklist_title }}
                  <svg class="w-4 h-4 transition-transform duration-600 peer-checked:rotate-180"
                       xmlns="http://www.w3.org/2000/svg"
                       fill="none"
                       viewBox="0 0 24 24"
                       stroke="currentColor">
                    <path stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 9l-7 7-7-7" />
                  </svg>
                </h2>
                <div class="collapse-content">
                  <ul class="flex flex-col gap-3">
                    {% for link in navigation[linkList.footer_linklist].links %}
                      <li>
                        <a href="{{ link | url }}" class="hover:underline">
                          {{ link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
            <div class="hidden md:flex flex-col gap-3">
              <h2 class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-8">
                {{ linkList.footer_linklist_title }}
              </h2>
              <ul class="flex flex-col gap-5">
                {% for link in navigation[linkList.footer_linklist].links %}
                  <li>
                    <a href="{{ link | url }}" class="hover:underline">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </nav>
        {% endfor %}
      </section>
    {% endif %}
  </footer>
  <section class="footer-bottom mt-6 pt-4 border-t border-base-300">
    <div class="max-w-8xl mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-center items-center gap-6 md:gap-60 max-w-4xl mx-auto text-center">
        {% if settings.footer_social_enable %}
          <section aria-labelledby="footer-social-heading">
            <h2 id="footer-social-heading" class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-3">
              Följ oss
            </h2>
            <div class="social-icons flex gap-3">
              {% include 'socialmedia-icon-links' %}
            </div>
          </section>
        {% endif %}
        {% if settings.footer_payment_enable and settings.footer_payment_methods.size > 0 %}
          <section aria-labelledby="footer-payment-heading">
            <h2 id="footer-payment-heading" class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-3">
              {{ settings.footer_payment_text }}
            </h2>
            <ul class="grid grid-cols-4 sm:grid-cols-6 md:grid-cols-6 gap-3 max-w-[800px] mx-auto">
  {% for payment in settings.footer_payment_methods %}
<li class="flex justify-center items-center 
           bg-white 
           border border-gray-200 
           rounded-sm 
           p-1">
  <img src="{{ payment.logo | asset_url }}"
       alt="Betala med {{ payment.name }}"
       class="h-6 object-contain">
</li>
  {% endfor %}
</ul>
          </section>
        {% endif %}
      </div>
    </div>
  </section>
  <section class="footer-copyright max-w-8xl mx-auto px-4 pb-6 mt-8">
    <p class="text-sm text-center">
      {{ 'Copyright &copy;' | t:'default' }}
      {{ site.name }} –
      {{ 'All rights reserved' | t:'default' }}
    </p>
  </section>
</div>